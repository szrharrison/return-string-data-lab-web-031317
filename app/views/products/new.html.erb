<% if flash.notice.present? %>
  <% flash.notice.full_messages.each do |message| %>
    <pre>
      <%= message %>
    </pre>
  <% end %>
<% end %>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :inventory %>
  <%= f.number_field :inventory %>
  <%= f.submit %>
<% end %>
